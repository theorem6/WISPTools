# Firebase App Hosting Configuration Template
# Copy this to apphosting.yaml and fill in your actual values

runConfig:
  minInstances: 0
  maxInstances: 4
  
env:
  # Firebase Configuration
  - variable: PUBLIC_FIREBASE_API_KEY
    value: your-firebase-api-key
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_FIREBASE_AUTH_DOMAIN
    value: your-project.firebaseapp.com
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_FIREBASE_PROJECT_ID
    value: your-project-id
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_FIREBASE_STORAGE_BUCKET
    value: your-project.firebasestorage.app
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_FIREBASE_MESSAGING_SENDER_ID
    value: "your-sender-id"
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_FIREBASE_APP_ID
    value: your-app-id
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_FIREBASE_MEASUREMENT_ID
    value: ""
    availability:
      - BUILD
      - RUNTIME
  
  # API Keys
  - variable: PUBLIC_ARCGIS_API_KEY
    value: your-arcgis-api-key
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_GEMINI_API_KEY
    value: your-gemini-api-key
    availability:
      - BUILD
      - RUNTIME
  
  - variable: PUBLIC_WOLFRAM_APP_ID
    value: your-wolfram-app-id
    availability:
      - BUILD
      - RUNTIME

