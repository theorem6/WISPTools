{
  "name": "lte-wisp-management-platform",
  "version": "1.0.0",
  "description": "LTE WISP Management Platform - Main Module Manager",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "node --max-old-space-size=6144 node_modules/vite/bin/vite.js build",
    "build:check": "npm run build && ls -lh build/client/_app/immutable/entry/",
    "start": "node server.js",
    "start:original": "node build/index.js",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "chmod +x deploy-to-firebase.sh && ./deploy-to-firebase.sh",
    "deploy:firebase": "npm run build && cd .. && firebase deploy --only hosting"
  },
  "dependencies": {
    "@sveltejs/adapter-node": "^5.2.9",
    "@sveltejs/kit": "^2.7.4",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "svelte": "^5.0.0",
    "firebase": "^11.1.0",
    "@arcgis/core": "^4.33.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}

