rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }

    function isPlatformAdmin() {
      return isAuthenticated() && request.auth.token.email == 'david@david.com';
    }

    function isTenantMember(tenantId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/user_tenants/$(request.auth.uid + '_' + tenantId));
    }

    function getTenantRole(tenantId) {
      return get(/databases/$(database)/documents/user_tenants/$(request.auth.uid + '_' + tenantId)).data.role;
    }

    function isTenantOwner(tenantId) {
      return isTenantMember(tenantId) && getTenantRole(tenantId) == 'owner';
    }

    function isTenantAdmin(tenantId) {
      return isTenantMember(tenantId) && getTenantRole(tenantId) in ['owner', 'admin'];
    }

    // ============================================================================
    // MULTI-TENANT COLLECTIONS
    // ============================================================================

    // Tenants collection
    match /tenants/{tenantId} {
      // Anyone authenticated can create a tenant
      allow create: if isAuthenticated();
      
      // Platform admin can list all tenants
      allow list: if isPlatformAdmin();
      
      // Can read if member of tenant OR platform admin
      allow read: if isTenantMember(tenantId) || isPlatformAdmin();
      
      // Can update if admin of tenant OR platform admin
      allow update: if isTenantAdmin(tenantId) || isPlatformAdmin();
      
      // Can delete if owner OR platform admin
      allow delete: if isTenantOwner(tenantId) || isPlatformAdmin();

      // Tenant subcollections
      match /cpe_devices/{deviceId} {
        allow read, write: if isTenantMember(tenantId);
      }

      match /cwmp_logs/{logId} {
        allow read: if isTenantMember(tenantId);
        allow write: if true; // GenieACS backend needs to write
      }

      match /networks/{networkId} {
        allow read, write: if isTenantMember(tenantId);
      }
    }

    // User-Tenant Associations
    match /user_tenants/{associationId} {
      // Users can read and list their own associations
      allow read, list: if isAuthenticated() && 
                          (associationId.matches('^' + request.auth.uid + '_.*') ||
                           resource.data.userId == request.auth.uid);
      
      // Anyone can create associations (when creating tenant or accepting invite)
      allow create: if isAuthenticated();
      
      // Tenant admins can update roles
      allow update: if isAuthenticated();
      
      // Tenant admins can remove users
      allow delete: if isAuthenticated();
    }

    // Tenant Invitations
    match /tenant_invitations/{invitationId} {
      // Users can read invitations sent to them
      allow read: if isAuthenticated();
      
      // Tenant admins can create invitations
      allow create: if isAuthenticated();
      
      // Can update when accepting invitation
      allow update: if isAuthenticated();
      
      // Tenant admins can delete invitations
      allow delete: if isAuthenticated();
    }

    // ============================================================================
    // LEGACY COLLECTIONS (Pre-multi-tenant)
    // ============================================================================

    // Networks collection (root level)
    match /networks/{networkId} {
      allow read: if isOwner(resource.data.ownerId);
      allow create: if isAuthenticated() 
                    && request.resource.data.ownerId == request.auth.uid
                    && request.resource.data.ownerEmail == request.auth.token.email;
      allow update: if isOwner(resource.data.ownerId)
                    && request.resource.data.ownerId == resource.data.ownerId;
      allow delete: if isOwner(resource.data.ownerId);
      
      // Cells subcollection
      match /cells/{cellId} {
        allow read: if isOwner(get(/databases/$(database)/documents/networks/$(networkId)).data.ownerId);
        allow write: if isOwner(get(/databases/$(database)/documents/networks/$(networkId)).data.ownerId);
      }
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // CPE devices (root level - legacy)
    match /cpe_devices/{deviceId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }
    
    // PCI analyses
    match /pci_analyses/{analysisId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }

    // Presets (root level - legacy)
    match /presets/{presetId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Faults (root level - legacy)
    match /faults/{faultId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Provisions (root level - legacy)
    match /provisions/{provisionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // ============================================================================
    // DENY ALL OTHER ACCESS
    // ============================================================================

    // Fallback - deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
