rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }
    
    // Networks collection
    match /networks/{networkId} {
      // Allow read if user is the owner
      allow read: if isOwner(resource.data.ownerId);
      
      // Allow create if user is authenticated and sets themselves as owner
      allow create: if isAuthenticated() 
                    && request.resource.data.ownerId == request.auth.uid
                    && request.resource.data.ownerEmail == request.auth.token.email;
      
      // Allow update if user is the owner
      allow update: if isOwner(resource.data.ownerId)
                    && request.resource.data.ownerId == resource.data.ownerId; // Don't allow changing owner
      
      // Allow delete if user is the owner
      allow delete: if isOwner(resource.data.ownerId);
      
      // Cells subcollection within a network
      match /cells/{cellId} {
        // Allow read if user owns the parent network
        allow read: if isOwner(get(/databases/$(database)/documents/networks/$(networkId)).data.ownerId);
        
        // Allow write if user owns the parent network
        allow write: if isOwner(get(/databases/$(database)/documents/networks/$(networkId)).data.ownerId);
      }
    }
    
    // User profiles (optional - for future use)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
